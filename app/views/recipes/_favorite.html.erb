<% if current_user %>
  <p>Like this recipe? Click
  <%= link_to "here", favorite_recipe_path(@recipe, type: "favorite"), method: :put %> to add it to your favorites.</p>
<% end %>

<h4> This recipe has been favorited by: </h4>
<% @recipe.favorited_by.each do |user| %>
 <li class= "horizontal_list"><%= link_to user.email, user_path(user) %></li><br>
<% end %>
